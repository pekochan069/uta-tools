---
import ToolLayout from "~/layouts/ToolLayout.astro";
import HexContents from "~/components/tools/converters/HexContents";
import type { on } from "solid-js";

const paths = Astro.url.pathname
  .split("/")
  .filter((p) => p !== "" && p !== "tools");
const category = paths[0];
const tool = paths[1];
---

<ToolLayout category={category} tool={tool}>
  <HexContents client:only />
</ToolLayout>
