---
import ContentLayout from "~/layouts/ContentLayout.astro";
import Base64Contents from "~/components/contents/tools/converters/Base64Contents";

const paths = Astro.url.pathname
  .split("/")
  .filter((p) => p !== "" && p !== "tools");
const category = paths[0];
const tool = paths[1].replace("-", " ");
---

<ContentLayout category={category} tool={tool}>
  <Base64Contents client:only />
</ContentLayout>
