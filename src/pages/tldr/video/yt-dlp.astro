---
import ContentLayout from "~/layouts/ContentLayout.astro";
import YpDlpContents from "~/components/contents/tldr/video/YpDlpContents.astro";

const paths = Astro.url.pathname
  .split("/")
  .filter((p) => p !== "" && p !== "tools");
const category = paths[0];
const tool = paths[1].replace("-", " ");
---

<ContentLayout category={category} tool={tool}>
  <YpDlpContents />
</ContentLayout>
