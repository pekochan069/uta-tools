---
import { TbChevronRight } from "solid-icons/tb";

import BaseLayout from "./BaseLayout.astro";
import SidebarContents from "~/components/SidebarContents.astro";

type Props = {
  category: string;
  tool: string;
};

const { category, tool }: Props = Astro.props;
---

<BaseLayout title={tool}>
  <div
    class="md:grid md:grid-cols-[220px_minmax(0,1fr)] md:gap-6 lg:grid-cols-[240px_minmax(0,1fr)] lg:gap-10"
  >
    <SidebarContents />
    <main class="py-4">
      <div class="mb-4 flex items-center gap-x-1 text-sm text-muted-foreground">
        <h2 class="capitalize">
          {category}
        </h2>
        <TbChevronRight class="inline-block h-4 w-4" />
        <h3 class="font-semibold capitalize">
          {tool}
        </h3>
      </div>
      <slot />
    </main>
  </div>
</BaseLayout>
