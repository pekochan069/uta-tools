---
import { currentContent } from "~/atoms/currentContent";
import ShowDescription from "~/components/contents/tldr/ShowDescription";
import { H1, Muted, P } from "~/components/ui/typography";
import ContentLayout from "./ContentLayout.astro";

const { name, description } = currentContent.get();
---

<ContentLayout>
  <H1>
    {name}
  </H1>
  {
    description !== "" && (
      <P>
        <Muted>{description}</Muted>
      </P>
    )
  }
  <ShowDescription client:load />
  <slot />
</ContentLayout>
