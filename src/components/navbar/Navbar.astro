---
import { TbTools } from "solid-icons/tb";

import ThemeToggle from "./ThemeToggle";
import SidebarToggle from "./SidebarToggle";
---

<header class="container px-4 py-2 md:px-6 md:py-4">
  <div class="flex items-center justify-between">
    <nav>
      <a href="/">
        <div class="flex w-fit items-center gap-2 text-xl font-bold leading-5">
          <TbTools class="h-5 w-5" />
          <div>
            <span class="text-violet-500 dark:text-violet-400">Uta</span>/<span
              >Tools</span
            >
          </div>
        </div>
      </a>
    </nav>
    <div class="flex gap-2">
      <div class="h-10 w-10">
        <ThemeToggle client:only />
      </div>
      <div class="h-10 w-10 md:hidden">
        <SidebarToggle client:only />
      </div>
    </div>
  </div>
</header>
