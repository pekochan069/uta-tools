    <ContentConfigLabel
      name={m.tools_converters_config_unit()}
      description={m.tools_converters_config_unit_description()}
    />
    <ContentConfig>
      <SelectUnitType client:load />
    </ContentConfig>
  </ContentConfigRoot>
</ContentConfigSection>
